// Task Management Models
// This file contains all models related to task management

model Task {
  id            String      @id @default(cuid())
  title         String
  label         TaskLabel
  status        TaskStatus  @default(todo)
  priority      TaskPriority @default(medium)
  estimatedHours Float?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

// Task Enums
enum TaskStatus {
  todo
  in_progress
  done
  canceled
}

enum TaskLabel {
  bug
  feature
  enhancement
  documentation
}

enum TaskPriority {
  low
  medium
  high
}